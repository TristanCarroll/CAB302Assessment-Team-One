<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650.0" prefWidth="883.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.byebyeboxeyes.controller.SettingsController">
   <HBox alignment="CENTER" prefHeight="650.0" prefWidth="883.0">
       <VBox prefHeight="650.0" prefWidth="291.0">
           <Label text="Account Settings" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 30px 0 20px 0; " />
           <Label alignment="CENTER" fx:id="SignedIn" wrapText="true" minWidth="100.0"
                  style=" -fx-padding: 0 0 2px 0; -fx-font-size: 18px;">
           </Label>
       </VBox>
   </HBox>
    <HBox alignment="CENTER" prefHeight="650.0" prefWidth="883.0">
      <children>
         <VBox alignment="CENTER" prefHeight="650.0" prefWidth="291.0">
            <children>
               <GridPane alignment="CENTER" prefHeight="90.0" prefWidth="782.0">
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                      <VBox spacing="5.0">
                          <Label fx:id="ResetPwdTitle" text="Reset Password" style="-fx-font-size:16px;"/>
                          <Label fx:id="ResetPwdHeading" text="Enter a new password:" minWidth="300.0"/>
                          <HBox alignment="CENTER_LEFT" spacing="15.0">
                              <PasswordField alignment="CENTER" fx:id="newUserPassword" maxWidth="145.0" />
                              <Button fx:id="ResetPwdButton" mnemonicParsing="false" onAction="#onResetButtonClick" text="Reset Password" />
                          </HBox>
                      </VBox>

                  </children>
               </GridPane>
                <VBox spacing="20.0">
                    <Button id="settingsLogoutButton" contentDisplay="CENTER" alignment="CENTER" onAction="#onLogoutButtonClick" prefHeight="25.0" prefWidth="99.0" text="Logout" />
                    <Label fx:id="DeleteAccount" alignment="CENTER" text="Delete account"/>
                    <Button fx:id="DeleteAccountButton" onAction="#onDeleteButtonClick" alignment="CENTER" prefHeight="25.0" prefWidth="99.0" text="Delete" />
                </VBox>
            </children>
         </VBox>
      </children>
   </HBox>
</AnchorPane>
